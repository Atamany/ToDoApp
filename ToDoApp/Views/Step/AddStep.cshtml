@using ToDoApp.DAL.Entities
@model Step
@{
    ViewData["Title"] = "AddStep";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="page active" id="steps-page">
    <div class="page-header">
        <h2>Görev Adımları</h2>
        <p>Görev detaylarını ve adımları yönetin</p>
    </div>

    <div class="steps-container">
        <div class="task-info">
            <h3>@ViewBag.Organization</h3>
        </div>

        <!-- Add Step Section -->
        <div class="form-container">
            <form class="form-control" method="post">
                <div class="form-group">
                    <input type="hidden" name="MissionId" value="@ViewBag.MissionId">
                    <label for="task-name">Yeni Adım Ekle</label>
                    <input type="text" asp-for="StepName" placeholder="Adım adını girin" required>
                </div>
                <div class="form-actions">
                    <a href="~/Mission/Index/" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
            </div>
        </div>
